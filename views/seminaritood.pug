extends layout

block content
    nav(aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item
                    a(href='/') Home
                li.breadcrumb-item
                    a(href='/portfolio') Portfolio
    h1 Seminaritööd page
    br
    a.btn.btn-sm.btn-outline-secondary(href='#') Lõputööd
    a.btn.btn-sm.btn-outline-secondary(href='/seminaritoo') Seminaritööd
    a.btn.btn-sm.btn-outline-secondary(href='#') Praktikad
    a.btn.btn-sm.btn-outline-secondary(href='#') Metall
    a.btn.btn-sm.btn-outline-secondary(href='#') Puit
    a.btn.btn-sm.btn-outline-secondary(href='#') Tekstiil
    #documents
        br
        .row
            each document, i in documents
                .col-md-4
                    .list-group.list
                        .list-group-item
                            img(src=document.path width='100%' height='200')
                            //- TODO open view from thumbnail
                            p.list-group-item-text.title=document.title
                            p.list-group-item-text.author=document.author
                            .card
                                a.btn.btn-sm.btn-outline-secondary(href='/portfolio/document/' + document._id) View

