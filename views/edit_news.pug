extends layout

block content
    nav(aria-label='breadcrumb')
            ol.breadcrumb
                li.breadcrumb-item
                    a(href='/') Home
                li.breadcrumb-item
                    a(href='/news') News
                li.breadcrumb-item
                    a(href='/news/edit' + singleNew._id) Edit
    br
    form(method='POST', action='/news/edit/' + singleNew._id)
        #form-group
            label News title:
            input.form-control(name='title', type='text', value=singleNew.title, required)
        #form-group
            label Date:
            input.form-control(name='date', type='date', value=singleNew.date)
        #form-group
            label Description:
            textarea.form-control(name='description', type='text', value=singleNew.description)
            br
        #form-group
            input.btn.btn-success(type='submit', value='Submit')
            input.btn.btn-warning(type='reset', value='Reset')
            a.button.btn.btn-danger(href='/news/', value='Cancel') Cancel