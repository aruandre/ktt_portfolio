                a.dropbtn.dropdown-toggle(href='/portfolio' role='button' aria-haspopup='true' aria-expanded='false')
                    | Portfolio
                .dropdown-menu(aria-labelledby='dropbtn')
                    a.dropdown-item(href='/portfolio') Portfolio
                    a.dropdown-item(href='/students') Students
                    a.dropdown-item(href='#') Design studio
                    a.dropdown-item(href='#') Internship
            if user
                .dropdown
                    a.dropbtn.dropdown-toggle(href='/admin' role='button' aria-haspopup='true' aria-expanded='false')
                        | Admin
                    .dropdown-menu(aria-labelledby='dropbtn')
                        a.dropdown-item(href='/admin') Admin page
                        a.dropdown-item(href='/profile') My profile
                        //- a.dropdown-item(href='/register') Register
                        a.dropdown-item(href='/logout') Logout
            a.navbar-brand(href='/about') About
            a.navbar-brand(href='/contacts') Contact
