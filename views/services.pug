extends layout

block content
    h1 Services page
    br
    .row
    each service, i in services
        .card.card-body
            .col-md-4
                p.title=service.title
                p.description=service.description
        if user
            a.btn.btn-primary(href='/services/edit/'+ service._id) Edit
            a.btn.btn-danger.delete-services(href='#', data-id=service._id) Delete
        br