extends layout

block content
    nav(aria-label='breadcrumb')
        ol.breadcrumb
            li.breadcrumb-item
                a(href='/') Home
            li.breadcrumb-item
                a(href='/portfolio') Portfolio
            li.breadcrumb-item
                a(href='/portfolio/tekstiil') Tekstiil
    h1 Tekstiil page
    br
    .text-center
        .btn-group(role='group')
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/loputood') Lõputööd
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/seminaritood') Seminaritööd
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/praktikad') Praktikad
    .text-center
        .btn-group(role='group')        
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/metall') Metall
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/puit') Puit
            a.btn.btn-sm.btn-outline-secondary(href='/portfolio/tekstiil') Tekstiil
    br
    #documents
        br
        .row
            each document, i in documents
                .col-md-4
                    .list-group.list
                        .list-group-item
                            img(src=document.path width='100%' height='200')
                            //- TODO open view from thumbnail
                            p.list-group-item-text.title=document.title
                            p.list-group-item-text.author=document.author
                            .card
                                a.btn.btn-sm.btn-outline-secondary(href='/portfolio/document/' + document._id) View

