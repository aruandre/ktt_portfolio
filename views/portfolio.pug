extends layout

block content
    h1 Portfolio page
    br
    //- TODO fix sorting/searching
    #documents
        .row
            each document, i in documents
                .col-md-4
                    .list-group.list
                        .list-group-item
                            svg.bd-placeholder-img.card-img-top(width='100%' height='225' preserveaspectratio='xMidYMid slice' focusable='false' role='img')
                                rect(width='100%' height='100%' fill='#55595c')
                                    img(src=document.path width='100%' height='50%')
                                //- TODO open view from thumbnail
                                //- text(x='50%' y='50%' fill='#eceeef' dy='.3em') Thumbnail
                                p.list-group-item-text.title=document.title
                                p.list-group-item-text.author=document.author
                                //- .d-flex.justify-content-between.align-items-center
                                .card
                                    a.btn.btn-sm.btn-outline-secondary(href='/portfolio/document/' + document._id) View

