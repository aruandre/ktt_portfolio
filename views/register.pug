extends layout

block content
    h1 Register
    form(method='POST', action='/register')
        #form-group
            label Username:
            input.form-control(name='username', type='text')
        #form-group
        label Email:
        input.form-control(name='email', type='text')
        #form-group
            label Password:
            input.form-control(name='password', type='text')
        #form-group
            label Confirm password:
            input.form-control(name='confirm', type='text')
        br
        input.btn.btn-primary(type='submit', value='Submit')
