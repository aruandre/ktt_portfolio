extends layout

block content
    br
    form(method='POST', action='/admin/edit/:id')
            #form-group
                label Document type: 
                select(name='document_type', required)
                    option.form-control(value='')
                    option.form-control(value='Lõputöö') Lõputöö
                    option.form-control(value='Seminaritöö') Seminaritöö
                    option.form-control(value='Praktika aruanne') Praktika aruanne
                    option.form-control(value='Muu') Muu
            #form-group
                label Document title: 
                input.form-control(name='title', type='text', value=document.title, required)
            #form-group
                label Author: 
                input.form-control(name='author', type='text', value=document.author, required)
            #form-group
                label Created at: 
                input.form-control(name='created_at', value=document.created_at, type='date')
            #form-group
                label Description: 
                textarea.form-control(name='description', value=document.description)
            #form-group
                label Tags: 
                input.form-control(name='tag', type='text' disabled)
                br
            input.btn.btn-primary(type='submit', value='Submit')