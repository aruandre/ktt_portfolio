extends layout

block content
    nav(aria-label='breadcrumb')
        ol.breadcrumb
            li.breadcrumb-item
                a(href='/') Home
            li.breadcrumb-item
                a(href='/portfolio') Portfolio
            li.breadcrumb-item
                a(href='/portfolio/document/' + document._id) Single document
            li.breadcrumb-item
                a(href='#') Edit
    br
    form(method='POST', action='/portfolio/document/edit/' + document._id)
        //- enctype='multipart/form-data' adding this will break updating docs
        #form-group
           .input-group.mb-3
                .input-group-prepend
                    label.input-group-text(for='document_type') Document type:&nbsp;
                    select(name='document_type', required)
                        option.selected Choose...
                        option.form-control(value='Lõputöö') Lõputöö
                        option.form-control(value='Seminaritöö') Seminaritöö
                        option.form-control(value='Praktika aruanne') Praktika aruanne
                        option.form-control(value='Muu') Muu
        #form-group
            label Document title: 
            input.form-control(name='title', type='text', value=document.title, required)
        #form-group
            label Author: 
            input.form-control(name='author', type='text', value=document.author, required)
        #form-group
            label Created at: 
            input.form-control(name='created_at', value=document.created_at, type='date')
        #form-group
            label Description: 
            input.textarea.form-control(name='description', value=document.description)
        #form-group
            label Tags:
            br
            select(name='tag' data-role='tagsinput' id='tags' multiple)
                option.form-control(value='')
                option.form-control(value='Metall') Metall
                option.form-control(value='Puit') Puit
                option.form-control(value='Tekstiil') Tekstiil
                option.form-control(value='Muu') Muu
            br
        #form-group.form-check
            label.form-check-label(for='defaultCheck3') Publish&nbsp;
            input#defaultCheck3.form-control-input(name='status' type='checkbox' value='true')
        #form-group
            input(type='file', name='fileupload')
            br
            br
            input.btn.btn-success(type='submit', value='Submit')
            input.btn.btn-warning(type='reset', value='Reset')
            a.button.btn.btn-danger(href='/portfolio/document/' + document._id, value='Cancel') Cancel